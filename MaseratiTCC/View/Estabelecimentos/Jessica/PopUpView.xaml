<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="MauiToolkitPopupSample.PopUpView"
           CanBeDismissedByTappingOutsideOfPopup="False"
           Size="300, 150"
           >

    <VerticalStackLayout BackgroundColor="White" VerticalOptions="CenterAndExpand">

        <TimePicker x:Name="timePicker" Format="HH:mm" VerticalOptions="CenterAndExpand" />

        <Button Text="Confirmar" Clicked="ConfirmarHorario_Clicked" Margin="0,15,0,0"
                    TextColor="Black"
                    BackgroundColor="LightSteelBlue"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    CornerRadius="20"/>
	



    </VerticalStackLayout>
</mct:Popup>
